entity patients{
    * id: int <<PK>>
    * first_name: varchar
    * last_name: varchar
    * hash: varchar
    * email: varchar
    * date_of_birth: date
    * contact: char
    * gender: char
    * address_line_1: varchar
    address_line_2: varchar
    address_line_3: varchar
    * state: varchar
    * city: varchar
    * zip: int
    * document_type: varchar
    * document_number: varchar
    weight: int
    blood_group: varchar
    * status: boolean
    * is_blocked: boolean
}
entity departments{
	* id: int <<PK>>
	* name: varchar
	image_url: varchar
}
entity doctors{
    * id: Long <<PK>>
    * hash: varchar
    * email: varchar
    * contact: char
    * designation: varchar
    * department: int <<FK>>
    * degrees: varchar
    * experience: int
    * image_url: varchar
    * language: varchar
    * gender: char
    * fees: int
    description: varchar
}
entity timeslots{
    * id: Long <<PK>>
    * doctor_id: int <<FK>>
    * slot: datetime
    * hours: int
}
entity admins{
    * id: Long <<PK>>
    * hash: varchar
    * email: varchar
    contact: char
}
entity reports{
    * id: Long <<PK>>
    * patient_id: int <<FK>>
    * name: varchar
    date: datetime
    * file_url: varchar
}
entity appointments{
    * id: Long <<PK>>
    * patient_id: int <<FK>>
    * doctor_id: int <<FK>>
    * timeslot: int <<FK>>
    symptom: varchar
}
entity prescriptions{
    * id: int <<PK>>
    * patient_id: Long <<FK>>
    * doctor_id: int <<FK>>
    * diagnosis: varchar
    investigation: varchar
    avoidables: varchar
    * date: datetime
    * is_ipd: boolean
}
entity medicine_plans{
    * id: Long <<PK>>
    * prescription_id: int <<FK>>
    * name: varchar
    * dosage: varchar
    duration: int
}
entity diet_plans{
    * id: Long <<PK>>
    * prescription_id: int <<FK>>
    * food: varchar
    duration: int
}

departments ||-right-|| doctors
patients ||--o{ reports
patients ||--o{ appointments
appointments }o--|| doctors
timeslots }|--|| doctors
patients ||--o{ prescriptions
prescriptions }o--|| doctors
prescriptions ||--|{ medicine_plans
prescriptions ||--o{ diet_plans

@enduml