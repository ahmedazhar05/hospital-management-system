@startuml
/'
    Skin
'/

' left to right direction
' top to bottom direction

skinparam componentStyle uml2
skinparam monochrome false
skinparam shadowing false
skinparam backgroundColor #ffffff
skinparam roundCorner 7

skinparam Arrow {
    Color #999999
}

skinparam default {
    BorderColor #666666
    FontColor #444444
    FontName Helvetica
    FontSize 12
    TextAlignment center
}

skinparam Box {
    Padding 10
    BorderThickness 0.5
    BorderColor #CEDBE1
    BackgroundColor #edf5f9
}

skinparam Note {
    FontColor #5F560B
    BorderColor #C8B609
    BackgroundColor #fff166
    BorderThickness 1
}

skinparam Database {
    BorderColor #202758
    BorderThickness 0.4
    BackgroundColor #D7D0F6
    FontColor #202758
}

skinparam Control {
    BorderColor #28451F
    BorderThickness 1
    BackgroundColor #C5E5BB
    FontColor #000000
}

skinparam Actor {
    BorderColor #3E4681
    BorderThickness 1.5
    BackgroundColor #ffffff
    FontColor #3E4681
}

skinparam Rectangle {
    Padding 20
    BorderThickness 0.5
    FontColor #1D234E
    BackgroundColor #C1C6EC
    BorderColor #202758
}

skinparam Participant {
    Padding 20
    BorderThickness 1.5
    FontColor #3E4681
    BackgroundColor #ffffff
    BorderColor #3E4681
}

